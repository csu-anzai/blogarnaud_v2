<!-- form to create or edit an entreprise -->
<%= simple_form_for(entreprise) do |f| %>

  <!-- metadata section -->
  <h5 id="form-metadata"><i class="fas fa-exclamation-circle"></i> <%= t('entreprises.form.metadata') %></h5>
  <%= f.input :name, :label => t('entreprises.form.name') %>
  <%= f.input :tag_id, collection: Tag.all.order(name_fr: :asc), label_method: :name_fr, value_method: :id %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :logo %>
  <%= f.input :logo_cache, as: :hidden %>
  <%= f.input :website, :label => t('entreprises.form.website') %>

  <!-- entreprise presentation in French -->
  <h5 id="form-french"><i class="fas fa-exclamation-circle"></i> <%= t('entreprises.form.presentation_french') %></h5>
  <h6><%= t('entreprises.form.value_french') %> *</h6>
  <%= f.rich_text_area :value_proposition_fr, :label => t('entreprises.form.value_french') %>
  <h6><%= t('entreprises.form.content_french') %> *</h6>
  <%= f.rich_text_area :content_fr, :label => t('entreprises.form.content_french') %>

  <!-- entreprise presentation in English -->
  <h5 id="form-english"><i class="fas fa-exclamation-circle"></i> <%= t('entreprises.form.presentation_english') %></h5>
  <h6><%= t('entreprises.form.value_english') %> *</h6>
  <%= f.rich_text_area :value_proposition_en, :label => t('entreprises.form.value_english') %>
  <h6><%= t('entreprises.form.content_english') %> *</h6>
  <%= f.rich_text_area :content_en, :label => t('entreprises.form.content_english') %>

  <!-- submit -->
  <%= f.submit t('entreprises.form.save'), class: "button-admin" %>
<% end %>
