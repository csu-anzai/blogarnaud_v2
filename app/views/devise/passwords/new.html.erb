<!-- customization of the head section -->
<% content_for :head do %>
  <!-- title and name -->
  <title>Blog | Arnaud Rioche | <%= t('admin.devise_views.forgot_password') %></title>
<% end %>

<!-- add spacer for navbar -->
<div class="navbar-spacer"></div>

<main class="container-main">
  <h2><%= t('admin.devise_views.forgot_password') %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  :label => t('admin.devise_views.email'),
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('admin.devise_views.send_reset_password_instruction'), class: "button-admin" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
